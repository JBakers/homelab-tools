#!/bin/bash
set -euo pipefail

# Copy SSH key to remote hosts
# Author: J.Bakers
# Version: See VERSION file

# Kleuren
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BOLD='\033[1m'
RESET='\033[0m'

CONFIG_FILE="$HOME/.ssh/config"
PUBLIC_KEY_FILE="$HOME/.ssh/id_ed25519.pub"

show_help() {
    echo "copykey - Distribute SSH keys to servers"
    echo ""
    echo "USAGE:"
    echo "  copykey"
    echo ""
    echo "DESCRIPTION:"
    echo "  Copies your public SSH key to all servers in your SSH config."
    echo "  This enables passwordless SSH login."
    echo ""
    echo "REQUIREMENTS:"
    echo "  - SSH config file: ~/.ssh/config"
    echo "  - SSH key: ~/.ssh/id_ed25519.pub"
}

if [[ "${1:-}" == "--help" ]] || [[ "${1:-}" == "-h" ]]; then
    show_help
    exit 0
fi

echo -e "${BOLD}${CYAN}╔══════════════════════════════════════════════════════════╗${RESET}"
echo -e "${BOLD}${CYAN}║         🔑 SSH Key Distribution                           ║${RESET}"
echo -e "${BOLD}${CYAN}╚══════════════════════════════════════════════════════════╝${RESET}"
echo ""

# Check if files exist
if [[ ! -f "$CONFIG_FILE" ]]; then
    echo -e "${RED}✗ SSH config not found: $CONFIG_FILE${RESET}"
    exit 1
fi

if [[ ! -f "$PUBLIC_KEY_FILE" ]]; then
    echo -e "${RED}✗ Public key not found: $PUBLIC_KEY_FILE${RESET}"
    echo ""
    echo -e "  Generate a key first:"
    echo -e "  ${GREEN}ssh-keygen -t ed25519${RESET}"
    exit 1
fi

echo -e "${BOLD}SSH Key:${RESET} ${CYAN}$PUBLIC_KEY_FILE${RESET}"
echo -e "${BOLD}Config:${RESET}  ${CYAN}$CONFIG_FILE${RESET}"
echo ""

# Read hosts from config
hosts=$(grep "^Host " "$CONFIG_FILE" | awk '{print $2}' | grep -v '\*' | sort -u)
host_count=$(echo "$hosts" | wc -l)

echo -e "${BOLD}Hosts found:${RESET} ${GREEN}$host_count${RESET}"
echo ""

# Counters
success=0
failed=0

# Loop through hosts
for hostname in $hosts; do
    # Validate hostname
    if [[ ! "$hostname" =~ ^[a-zA-Z0-9._-]+$ ]]; then
        echo -e "${YELLOW}→${RESET} ${BOLD}$hostname${RESET} ... ${RED}✗ (invalid)${RESET}"
        failed=$((failed + 1))
        continue
    fi

    echo -ne "${YELLOW}→${RESET} ${BOLD}$hostname${RESET} ... "
    
    # Copy the key
    if ssh -F "$CONFIG_FILE" -o ConnectTimeout=5 "$hostname" \
        "mkdir -p ~/.ssh; chmod 700 ~/.ssh; cat >> ~/.ssh/authorized_keys; chmod 600 ~/.ssh/authorized_keys" < "$PUBLIC_KEY_FILE" 2>/dev/null; then
        echo -e "${GREEN}✓${RESET}"
        success=$((success + 1))
    else
        echo -e "${RED}✗${RESET}"
        failed=$((failed + 1))
    fi
done

echo ""
echo -e "${BOLD}${CYAN}════════════════════════════════════════════════════════════${RESET}"
echo -e "${GREEN}✓ Success:${RESET}  $success"
echo -e "${RED}✗ Failed:${RESET}   $failed"
echo -e "${BOLD}${CYAN}════════════════════════════════════════════════════════════${RESET}"
echo ""
