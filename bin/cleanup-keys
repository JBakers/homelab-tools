#!/bin/bash
set -euo pipefail

# Cleanup host keys for homelab hosts
#!/bin/bash
set -euo pipefail

# Cleanup old SSH host keys
# Author: J.Bakers
# Version: 3.5.0-dev.25

# Kleuren
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BOLD='\033[1m'
RESET='\033[0m'

show_help() {
    echo -e "${BOLD}${CYAN}cleanup-keys - Remove old host keys${RESET}"
    echo ""
    echo -e "${BOLD}USAGE:${RESET}"
    echo "  cleanup-keys <hostname-or-ip>"
    echo ""
    echo -e "${BOLD}DESCRIPTION:${RESET}"
    echo "  Removes old SSH host keys from ~/.ssh/known_hosts."
    echo "  Useful when you've reinstalled a container and SSH"
    echo "  complains about \"WARNING: REMOTE HOST IDENTIFICATION HAS CHANGED\"."
    echo ""
    echo -e "${BOLD}EXAMPLES:${RESET}"
    echo -e "  ${GREEN}cleanup-keys jellyfin${RESET}"
    echo "      Remove keys for hostname 'jellyfin'"
    echo ""
    echo -e "  ${GREEN}cleanup-keys 192.168.1.30${RESET}"
    echo "      Remove keys for IP address"
    echo ""
    echo -e "${BOLD}WORKFLOW:${RESET}"
    echo "  1. Container reinstalled"
    echo "  2. SSH gives warning about changed host key"
    echo -e "  3. Run: ${GREEN}cleanup-keys <hostname>${RESET}"
    echo "  4. Try connecting again"
    echo ""
    echo -e "${BOLD}NOTE:${RESET}"
    echo "  This is safe when you've reinstalled the container yourself."
    echo "  For unexpected key changes, investigate the cause first"
    echo "  before removing the keys."
    echo ""
}

if [[ "${1:-}" == "--help" ]] || [[ "${1:-}" == "-h" ]]; then
    show_help
    exit 0
fi

HOST=${1:-}

# Validate hostname/IP if provided
if [[ -n "$HOST" ]] && [[ ! "$HOST" =~ ^[a-zA-Z0-9._-]+$ ]]; then
    echo -e "${RED}âœ— Error: Invalid hostname${RESET}"
    echo -e "  Alleen letters, cijfers, punten, underscores en streepjes zijn toegestaan"
    exit 1
fi

# Validate hostname/IP if provided
if [[ -n "$HOST" ]] && [[ ! "$HOST" =~ ^[a-zA-Z0-9._-]+$ ]] && [[ ! "$HOST" =~ ^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$ ]]; then
    echo -e "${RED}âœ— Error: Invalid hostname or IP${RESET}"
    echo -e "  Gebruik een geldige hostname of IP address"
    exit 1
fi

echo -e "${BOLD}${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo -e "â•‘         ğŸ§¹ Cleanup Host Keys                          â•‘"
echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
echo ""

# Check of known_hosts bestaat
if [[ ! -f ~/.ssh/known_hosts ]]; then
    echo -e "${YELLOW}âš  No known_hosts file found${RESET}"
    echo -e "  (Dit is normaal als je nog nooit SSH hebt gebruikt)"
    exit 0
fi

# Als geen host opgegeven, scan alle hosts uit host list
if [[ -z "$HOST" ]]; then
    SSH_CONFIG="$HOME/.ssh/config"
    
    if [[ ! -f "$SSH_CONFIG" ]]; then
        echo -e "${RED}âœ— No host list found${RESET}"
        echo -e "  Usage: ${GREEN}cleanup-keys <hostname-or-ip>${RESET}"
        exit 1
    fi
    
    # Get all hosts from SSH config
    hosts=$(grep "^Host " "$SSH_CONFIG" | awk '{print $2}' | grep -v '\*' | sort -u)
    
    if [[ -z "$hosts" ]]; then
        echo -e "${YELLOW}âš  No hosts found in host list${RESET}"
        exit 0
    fi
    
    echo -e "${BOLD}Available hosts:${RESET}"
    echo ""
    
    # Show all hosts
    i=1
    declare -a host_array
    while IFS= read -r host; do
        host_array[$i]="$host"
        echo -e "  ${CYAN}$i)${RESET} $host"
        i=$((i + 1))
    done <<< "$hosts"
    
    echo ""
    echo -e "  ${CYAN}a)${RESET} All hosts"
    echo -e "  ${CYAN}q)${RESET} Quit"
    echo ""
    
    read -p "Cleanup keys for which host(s)? " choice
    
    if [[ "$choice" == "q" ]]; then
        echo "Cancelled."
        exit 0
    fi
    
    if [[ "$choice" == "a" ]]; then
        # Cleanup all hosts
        echo ""
        echo -e "${YELLOW}â†’${RESET} Cleaning up all hosts..."
        echo ""
        
        cleaned=0
        for host in "${host_array[@]}"; do
            [[ -z "$host" ]] && continue
            echo -e "  ${CYAN}$host${RESET}..."
            ssh-keygen -R "$host" &>/dev/null
            if [[ $? -eq 0 ]]; then
                echo -e "    ${GREEN}âœ“${RESET} Cleaned"
                cleaned=$((cleaned + 1))
            else
                echo -e "    ${YELLOW}âš ${RESET} No keys found"
            fi
        done
        
        echo ""
        echo -e "${GREEN}âœ“ Cleanup complete!${RESET}"
        echo -e "  $cleaned host(s) cleaned"
        exit 0
    fi
    
    # Cleanup specific host
    if [[ "$choice" =~ ^[0-9]+$ ]] && [[ $choice -ge 1 ]] && [[ $choice -lt $i ]]; then
        HOST="${host_array[$choice]}"
    else
        echo -e "${RED}âœ— Invalid choice${RESET}"
        exit 1
    fi
fi

echo -e "${BOLD}Host: ${GREEN}$HOST${RESET}"
echo ""

# Remove old host keys
echo -e "${YELLOW}â†’${RESET} Removing old host keys..."
ssh-keygen -R "$HOST" &>/dev/null

if [[ $? -eq 0 ]]; then
    echo -e "${GREEN}âœ“${RESET} Keys removed for: ${CYAN}$HOST${RESET}"
else
    echo -e "${YELLOW}âš ${RESET} No keys found for: ${CYAN}$HOST${RESET}"
    echo -e "  (This is OK, means there were no old keys)"
fi

echo ""
echo -e "${GREEN}âœ“ Cleanup complete!${RESET}"
echo ""
echo -e "${YELLOW}Volgende stap:${RESET}"
echo -e "  Test de SSH connectie:"
echo -e "  ${GREEN}ssh $HOST${RESET}"
echo ""
