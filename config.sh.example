#!/bin/bash
# shellcheck disable=SC2034
# Homelab Tools Configuration Example
# Author: J.Bakers
# Version: See VERSION file
#
# ⚠️  SECURITY WARNING ⚠️
# This file contains your homelab configuration.
# DO NOT commit config.sh to version control!
# It is already in .gitignore for your protection.
#
# Copy this file to config.sh and customize for your homelab:
#   cp config.sh.example config.sh
#   nano config.sh

# Domain suffix for your homelab
# Used for Web UI URLs in MOTDs
# Examples: ".home", ".local", ".lan", or leave empty for no suffix
export DOMAIN_SUFFIX=".home"

# IP detection method
# Options: "hostname" or "ip"
# - "hostname": use hostname -I for IP detection
# - "ip": use ip addr for IP detection
export IP_METHOD="hostname"
